<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:layout_marginStart="30dp"
    android:layout_marginTop="200dp"
    android:layout_marginEnd="30dp">

    <ImageView
        android:id="@+id/wifi_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/wifi_off"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/no_internet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo"
        android:text="No Internet Connection"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="@+id/wifi_img"
        app:layout_constraintStart_toStartOf="@+id/wifi_img"
        app:layout_constraintTop_toBottomOf="@+id/wifi_img" />

    <TextView
        android:id="@+id/desc"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Your internet connection is currently
not available please check or try again."
        android:textSize="16sp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="@+id/no_internet"
        app:layout_constraintStart_toStartOf="@+id/no_internet"
        app:layout_constraintTop_toBottomOf="@+id/no_internet" />

    <Button
        android:id="@+id/tryAgain"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_style"
        android:text="Try again"
        app:layout_constraintEnd_toEndOf="@+id/no_internet"
        app:layout_constraintStart_toStartOf="@+id/no_internet"
        app:layout_constraintTop_toBottomOf="@+id/desc" />


</androidx.constraintlayout.widget.ConstraintLayout>
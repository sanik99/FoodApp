<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Favourite_Activity">

    <ImageView
        android:id="@+id/back_btn5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/back_btn"
        android:layout_margin="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Favourite"
        android:layout_margin="5dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <ImageView
        android:id="@+id/cartImg3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/fav_img"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/orderTxt3"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="No favourites yet"
        android:textSize="22dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/cartImg3"
        app:layout_constraintStart_toStartOf="@+id/cartImg3"
        app:layout_constraintEnd_toEndOf="@+id/cartImg3"/>

    <TextView
        android:id="@+id/txt3"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="Hit the start ordering button down below
to Create an order."
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/orderTxt3"
        app:layout_constraintStart_toStartOf="@+id/orderTxt3"
        app:layout_constraintEnd_toEndOf="@+id/orderTxt3"/>

    <Button
        android:id="@+id/startOrder3"
        android:layout_width="330dp"
        android:layout_height="55dp"
        android:text="Start ordering"
        android:background="@drawable/button_style"
        android:layout_marginTop="250dp"
        app:layout_constraintTop_toBottomOf="@+id/txt3"
        app:layout_constraintStart_toStartOf="@+id/txt3"
        app:layout_constraintEnd_toEndOf="@+id/txt3"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
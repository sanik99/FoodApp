<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    tools:context=".User_Profile_Activity">

    <ImageView
        android:id="@+id/back_btn6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/back_btn"
        android:layout_margin="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/myProf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My profile"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/back_btn6"
        app:layout_constraintStart_toStartOf="@+id/back_btn6"/>

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myProf">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personal details"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_margin="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change"
            android:textColor="@color/orange"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="150dp"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cview"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:cardCornerRadius="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toBottomOf="@+id/layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/hotcoffeebrewed"/>


        <LinearLayout
            android:layout_width="230dp"
            android:layout_height="match_parent"
            android:layout_marginStart="129dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/fulname_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:hint="Full Name"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/email_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="Email id"
                android:textColor="@color/black"
                android:textSize="16sp" />

<!--            <View-->
<!--                android:layout_width="210dp"-->
<!--                android:layout_height="1dp"-->
<!--                android:layout_marginTop="5dp"-->
<!--                android:background="@color/grey" />-->

            <EditText
                android:id="@+id/phon_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="Phone no"
                android:textColor="@color/black"
                android:textSize="16sp" />

<!--            <View-->
<!--                android:layout_width="210dp"-->
<!--                android:layout_height="1dp"-->
<!--                android:layout_marginTop="5dp"-->
<!--                android:background="@color/grey" />-->

            <EditText
                android:id="@+id/add_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="Address"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cview"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/order_btn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Orders"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingTop="15dp"
            android:paddingStart="30dp"
            android:background="@drawable/rectangleradius_shape"
            android:drawableEnd="@drawable/next"
            android:paddingEnd="30dp"
            android:paddingBottom="15dp"
            android:layout_marginTop="25dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/pending_btn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Pending"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingTop="15dp"
            android:paddingStart="30dp"
            android:background="@drawable/rectangleradius_shape"
            android:drawableEnd="@drawable/next"
            android:paddingEnd="30dp"
            android:paddingBottom="15dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/faq_btn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Faq"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingTop="15dp"
            android:paddingStart="30dp"
            android:background="@drawable/rectangleradius_shape"
            android:drawableEnd="@drawable/next"
            android:paddingEnd="30dp"
            android:paddingBottom="15dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/help_btn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Help"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingTop="15dp"
            android:paddingStart="30dp"
            android:background="@drawable/rectangleradius_shape"
            android:drawableEnd="@drawable/next"
            android:paddingEnd="30dp"
            android:paddingBottom="15dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/black" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Update"
            android:background="@drawable/button_style"
            android:layout_marginTop="30dp"
            android:textAllCaps="false"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>